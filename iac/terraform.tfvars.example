# AWS Configuration
aws_region = "ap-southeast-2"

# Lambda Configuration
lambda_function_name = "aws-lambda-mcp"
lambda_memory_size   = 128
lambda_timeout       = 30

# Path to compiled Lambda binary (after running `make release`)
lambda_binary_path = "../target/lambda/aws-lambda-mcp/bootstrap"

# Path to tool schema JSON file (generated by `make schema`)
tool_schema_path = "../tool_schema.json"

# Logging
rust_log_level    = "warn"  # Reduced logging to minimize CloudWatch costs
log_retention_days = 3       # Minimum retention period

# Additional environment variables (optional)
additional_env_vars = {
  # Add any custom environment variables here
  # EXAMPLE_VAR = "example_value"
}

# Bedrock Agent Gateway Configuration
gateway_name = "aws-lambda-mcp-gateway"

# Secrets Manager (optional)
secrets_manager_arns = [
  # "arn:aws:secretsmanager:ap-southeast-2:123456789012:secret:my-secret-abc123"
]

# Tags
common_tags = {
  Project     = "aws-lambda-mcp"
  ManagedBy   = "terraform"
  Environment = "production"
  Team        = "platform"
}

# AWS Bedrock AgentCore Gateway Configuration
# Enable debug-level error logging (shows detailed error context)
# gateway_enable_debug = true

# Entra ID OAuth Configuration (mandatory for security)
# Customize the app registration name if needed
entra_app_name = "aws-lambda-mcp"

# Redirect URIs for OAuth flows
entra_redirect_uris = [
  "http://localhost:8080/callback"
]
